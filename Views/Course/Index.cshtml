@model IEnumerable<Course>

<a asp-action="Create" asp-controller="Course" class="btn btn-primary">Add Course</a>

<table class="table table-bordered table-hover">
    <tr>
        <th>Course Id</th>
        <th>Course Name</th>
        <th>Duration</th>
        <th>Department Name</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Duration</td>
            <td>@item?.Department?.Name</td>

            <td>
                <a asp-action="Update" asp-controller="Course" asp-route-Id="@item.Id" class="btn btn-primary">Edit</a>
                <a asp-action="Details" asp-controller="Course" asp-route-Id="@item.Id" class="btn btn-primary">Details</a>
                <a asp-action="Delete" asp-controller="Course" asp-route-Id="@item.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this Course?');">Delete</a>
            </td>

        </tr>
    }
</table>

<a href="/Student/Index" class="btn btn-primary">Go To Students</a>
